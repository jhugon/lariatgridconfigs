<?xml version="1.0"?>

<!-- Production Project -->

<!DOCTYPE project [
<!ENTITY release "v06_34_01">
<!ENTITY file_type "mc">
<!ENTITY run_type "physics">
<!ENTITY name "mwt2_test_v6">
<!ENTITY tag "TestOfBatchJobs">
<!ENTITY myoutdir "/pnfs/lariat/scratch/users/jhugon">
<!ENTITY myworkdir "/pnfs/lariat/scratch/users/jhugon/gridworkdir">
<!ENTITY njobs "10">
]>

<project name="&name;">

  <!-- Project size -->
  <numevents>200</numevents>
  <!-- Try to do 720 events/job  ~2hr for reco -->
  <memory>1500</memory> <!-- RecoMC seems to max out around 1177 MB -->

  <!-- Operating System -->
  <os>SL6</os>

  <!-- Batch resources -->
  <resource>DEDICATED,OPPORTUNISTIC,OFFSITE</resource>
  <site>MWT2</site>

  <!-- Larsoft information -->
  <larsoft>
      <tag>&release;</tag>
      <qual>e14:prof</qual>
      <local>/pnfs/lariat/persistent/users/jhugon/tarballs/lariatsoft_9d3591a0_larana_caa2483.tar</local>
  </larsoft>

  <!-- Project stages -->

  <stage name="gensimdigireco">
      <fcl>prodsingle_lariat_PiAbsAndChEx_pip.fcl</fcl>
      <fcl>RecoMC.fcl</fcl>
      <outdir>&myoutdir;/&release;/gensimdigireco/&name;</outdir>
      <workdir>&myworkdir;/&release;/gensimdigireco/&name;</workdir>
      <numjobs>&njobs;</numjobs>
      <datatier>simulated</datatier>
      <jobsub>--expected-lifetime=1h --mail_never</jobsub>
  </stage>

  <!-- file type -->
  <filetype>&file_type;</filetype>

  <!-- run type -->
  <runtype>&run_type;</runtype>

</project>
