<?xml version="1.0"?>

<!-- Production Project -->
<!-- for v3 just like v2, just more events/job and events total-->
<!-- for v4 just like v3, just back to not-smeared -->

<!DOCTYPE project [
<!ENTITY release "v06_34_01">
<!ENTITY file_type "mc">
<!ENTITY run_type "physics">
<!ENTITY name "lariat_PiAbsAndChEx_flat_isoInTPC_pip_v4">
<!ENTITY tag "TestOfBatchJobs">
<!ENTITY myoutdir "/pnfs/lariat/scratch/users/jhugon">
<!ENTITY myworkdir "/pnfs/lariat/scratch/users/jhugon/gridworkdir">
<!ENTITY njobs "170">
]>

<project name="&name;">

  <!-- Project size -->
  <numevents>220000</numevents>
  <!-- Try to do 1300 events/job avg 2hr for reco -->

  <!-- Operating System -->
  <os>SL6</os>

  <!-- Batch resources -->
  <resource>DEDICATED,OPPORTUNISTIC</resource>
  <memory>800</memory> <!-- RecoMC seems to max out around 1177 MB -->

  <!-- Larsoft information -->
  <larsoft>
      <tag>&release;</tag>
      <qual>e14:prof</qual>
      <local>/pnfs/lariat/persistent/users/jhugon/tarballs/lariatsoft_2e3650ee_larana_caa2483.tar</local>
  </larsoft>

  <!-- Project stages -->

  <stage name="gensimdigireco">
      <fcl>prodsingle_lariat_PiAbsAndChEx_isoInTPC_pip.fcl</fcl>
      <!-- <fcl>prodsingle_lariat_PiAbsAndChEx_isoInTPC_pip_presmear20perc.fcl</fcl> -->
      <fcl>RecoMC.fcl</fcl>
      <outdir>&myoutdir;/&release;/gensimdigireco/&name;</outdir>
      <workdir>&myworkdir;/&release;/gensimdigireco/&name;</workdir>
      <numjobs>&njobs;</numjobs>
      <datatier>reconstructed-2d</datatier>
      <resource>DEDICATED,OPPORTUNISTIC,OFFSITE</resource>
      <jobsub>--expected-lifetime=3h --mail_never</jobsub>
      <memory>500</memory>
  </stage>

  <stage name="likelihood">
      <fcl>likelihoodPIDMaker.fcl</fcl>
      <inputlist>&myoutdir;/&release;/gensimdigireco/&name;/files.list</inputlist>
      <outdir>&myoutdir;/&release;/likelihood/&name;</outdir>
      <workdir>&myworkdir;/&release;/likelihood/&name;</workdir>
      <numjobs>&njobs;</numjobs>
      <datatier>reconstructed-2d</datatier>
      <jobsub>--expected-lifetime=3h --mail_never</jobsub>
  </stage>

  <stage name="ana">
      <fcl>AnaTree.fcl</fcl>
      <inputlist>&myoutdir;/&release;/gensimdigireco/&name;/files.list</inputlist>
      <outdir>&myoutdir;/&release;/ana/&name;</outdir>
      <workdir>&myworkdir;/&release;/ana/&name;</workdir>
      <numjobs>&njobs;</numjobs>
      <datatier>reconstructed-2d</datatier>
      <jobsub>--expected-lifetime=3h --mail_never</jobsub>
  </stage>

  <!-- file type -->
  <filetype>&file_type;</filetype>

  <!-- run type -->
  <runtype>&run_type;</runtype>

</project>
