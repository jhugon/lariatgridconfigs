<?xml version="1.0"?>

<!-- Production Project -->

<!DOCTYPE project [
<!ENTITY release "v06_15_00">
<!ENTITY file_type "mc">
<!ENTITY run_type "physics">
<!ENTITY name "lariat_osg_test_v1">
<!ENTITY tag "TestOfBatchJobs">
<!ENTITY myoutdir "/pnfs/lariat/scratch/users/yourusername">
<!ENTITY myworkdir "/lariat/app/users/yourusername/lariatOffline">
<!ENTITY njobs "10">
]>

<project name="&name;">

  <!-- Project size -->
  <numevents>1000</numevents>

  <!-- Operating System -->
  <os>SL6</os>

  <!-- Batch resources -->
  <resource>DEDICATED,OPPORTUNISTIC,OFFSITE</resource>
  <memory>1500</memory> <!-- RecoMC seems to max out around 1177 MB -->

  <!-- Larsoft information -->
  <larsoft>
      <tag>&release;</tag>
      <qual>e10:prof</qual>
      <local>/lariat/app/users/yourusername/tarballs/tarball.xml</local>
  </larsoft>

  <!-- Project stages -->

  <stage name="gensimdigireco">
      <fcl>prodsingle_lariat.fcl</fcl>
      <fcl>RecoMC.fcl</fcl>
      <outdir>&myoutdir;/&release;/gensimdigireco/&name;</outdir>
      <workdir>&myworkdir;/&release;/gensimdigireco/&name;</workdir>
      <numjobs>&njobs;</numjobs>
      <datatier>simulated</datatier>
      <jobsub>--expected-lifetime=3h</jobsub>
  </stage>

  <!-- file type -->
  <filetype>&file_type;</filetype>

  <!-- run type -->
  <runtype>&run_type;</runtype>

</project>
