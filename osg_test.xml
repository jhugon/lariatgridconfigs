<?xml version="1.0"?>

<!-- Production Project -->

<!DOCTYPE project [
<!ENTITY release "v06_15_00">
<!ENTITY file_type "mc">
<!ENTITY run_type "physics">
<!ENTITY name "lariat_osg_test_v2">
<!ENTITY tag "TestOfBatchJobs">
<!ENTITY myoutdir "/pnfs/lariat/scratch/users/jhugon">
<!ENTITY myworkdir "/lariat/app/users/jhugon/lariatOffline">
<!ENTITY njobs "10">
]>

<project name="&name;">

  <!-- Project size -->
  <numevents>18000</numevents>
  <!-- Each job: 1800 evts : RecoMC: 2 hours and 13 GB outfile-->

  <!-- Operating System -->
  <os>SL6</os>

  <!-- Batch resources -->
  <resource>OFFSITE</resource>
  <memory>1500</memory> <!-- RecoMC seems to max out around 1177 MB -->

  <!-- Larsoft information -->
  <larsoft>
      <tag>&release;</tag>
      <qual>e10:prof</qual>
      <local>/lariat/app/users/jhugon/genPionAbsAndChEx/lariatsoft_f2e51ec_larana_434c9e2_osgtest.tar</local>
  </larsoft>

  <!-- Project stages -->

  <stage name="gensimdigi">
      <fcl>prodsingle_lariat_PiAbsAndChEx_pip.fcl</fcl>
      <outdir>&myoutdir;/&release;/gensimdigi/&name;</outdir>
      <workdir>&myworkdir;/&release;/gensimdigi/&name;</workdir>
      <numjobs>&njobs;</numjobs>
      <datatier>simulated</datatier>
      <jobsub>--expected-lifetime=1h</jobsub>
  </stage>

  <stage name="reco">
      <fcl>RecoMC.fcl</fcl>
      <outdir>&myoutdir;/&release;/reco/&name;</outdir>
      <workdir>&myworkdir;/&release;/reco/&name;</workdir>
      <numjobs>&njobs;</numjobs>
      <datatier>simulated</datatier>
      <jobsub>--expected-lifetime=3h</jobsub>
  </stage>

  <stage name="reco">
      <fcl>piAbsSelector.fcl</fcl>
      <outdir>&myoutdir;/&release;/piAbsSelector/&name;</outdir>
      <workdir>&myworkdir;/&release;/piAbsSelector/&name;</workdir>
      <numjobs>&njobs;</numjobs>
      <datatier>simulated</datatier>
      <jobsub>--expected-lifetime=1h</jobsub>
  </stage>

  <!-- file type -->
  <filetype>&file_type;</filetype>

  <!-- run type -->
  <runtype>&run_type;</runtype>

</project>
