<?xml version="1.0"?>

<!-- Production Project -->
<!-- for v1 first try with v06_06_01 and e+, just 5000, 10 jobs -->
<!-- for v2 26.25k events, 350 events/job -->

<!DOCTYPE project [
<!ENTITY release "v06_06_01">
<!ENTITY file_type "mc">
<!ENTITY run_type "physics">
<!ENTITY name "lariat_PiAbsAndChEx_flat_ep_v2">
<!ENTITY tag "TestOfBatchJobs">
<!ENTITY myoutdir "/pnfs/lariat/scratch/users/jhugon">
<!ENTITY myworkdir "/lariat/app/users/jhugon/lariatOffline">
<!ENTITY njobs "75">
]>

<project name="&name;">

  <!-- Project size -->
  <numevents>26250</numevents>
  <!-- Try to do 350 events/job  ~5hr for reco -->

  <!-- Operating System -->
  <os>SL6</os>

  <!-- Batch resources -->
  <resource>DEDICATED,OPPORTUNISTIC</resource>

  <!-- Larsoft information -->
  <larsoft>
      <tag>&release;</tag>
      <qual>e10:prof</qual>
      <local>/lariat/app/users/jhugon/genPionAbsAndChEx/lariatsoft_b22396f_larana_6356051.tar</local>
  </larsoft>

  <!-- Project stages -->

  <stage name="gensimdigi">
      <fcl>prodsingle_lariat_PiAbsAndChEx_ep.fcl</fcl>
      <outdir>&myoutdir;/&release;/gensimdigi/&name;</outdir>
      <workdir>&myworkdir;/&release;/gensimdigi/&name;</workdir>
      <numjobs>&njobs;</numjobs>
      <datatier>simulated</datatier>
  </stage>

  <stage name="reco">
      <fcl>RecoMC.fcl</fcl>
      <outdir>&myoutdir;/&release;/reco/&name;</outdir>
      <workdir>&myworkdir;/&release;/reco/&name;</workdir>
      <numjobs>&njobs;</numjobs>
      <datatier>reconstructed-2d</datatier>
  </stage>

  <stage name="ana">
      <fcl>AnaTree.fcl</fcl>
      <outdir>&myoutdir;/&release;/ana/&name;</outdir>
      <workdir>&myworkdir;/&release;/ana/&name;</workdir>
      <numjobs>&njobs;</numjobs>
      <datatier>reconstructed-2d</datatier>
  </stage>

  <!-- file type -->
  <filetype>&file_type;</filetype>

  <!-- run type -->
  <runtype>&run_type;</runtype>

</project>
