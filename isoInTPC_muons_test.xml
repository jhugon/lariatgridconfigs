<project name="&name;">

  <!-- Project size -->
  <numevents>20000</numevents>
  <!-- Try to do 1000 events/job  ~2hr for reco -->

  <!-- Operating System -->
  <os>SL6</os>

  <!-- Batch resources -->
  <resource>DEDICATED,OPPORTUNISTIC,OFFSITE</resource>
  <memory>800</memory>

  <!-- Larsoft information -->
  <larsoft>
      <tag>&release;</tag>
      <qual>e14:prof</qual>
      <local>/pnfs/lariat/persistent/users/jhugon/tarballs/lariatsoft_792f9356_larana_caa2483.tar</local>
  </larsoft>

  <!-- Project stages -->

  <stage name="gensimdigireco">
      <fcl>prodsingle_lariat_PiAbsAndChEx_isoInTPC_mup_test.fcl</fcl>
