<?xml version="1.0"?>

<!-- Production Project -->

<!DOCTYPE project [
<!ENTITY release "v06_34_01">
<!ENTITY file_type "mc">
<!ENTITY run_type "physics">
<!ENTITY name "cmst1_test_v1">
<!ENTITY tag "TestOfBatchJobs">
<!ENTITY myoutdir "/pnfs/lariat/scratch/users/jhugon">
<!ENTITY myworkdir "/pnfs/lariat/scratch/users/jhugon/gridworkdir">
<!ENTITY njobs "2">
]>

<project name="&name;">

  <!-- Project size -->
  <numevents>20</numevents>
  <!-- Try to do 720 events/job  ~2hr for reco -->
  <memory>1500</memory> <!-- RecoMC seems to max out around 1177 MB -->

  <!-- Operating System -->
  <os>SL6</os>

  <!-- Batch resources -->
  <resource>OFFSITE</resource>
  <site>FNAL</site>

  <!-- Larsoft information -->
  <larsoft>
      <tag>&release;</tag>
      <qual>e14:prof</qual>
      <local>/pnfs/lariat/resilient/users/jhugon/lariatsoft_f2f7d40_larana_caa2483.tar</local>
  </larsoft>

  <!-- Project stages -->

  <stage name="gensimdigi">
      <fcl>prodsingle_lariat_PiAbsAndChEx_p.fcl</fcl>
      <outdir>&myoutdir;/&release;/gensimdigi/&name;</outdir>
      <workdir>&myworkdir;/&release;/gensimdigi/&name;</workdir>
      <numjobs>&njobs;</numjobs>
      <datatier>simulated</datatier>
      <jobsub>--expected-lifetime=1h --mail_never</jobsub>
  </stage>

  <!-- file type -->
  <filetype>&file_type;</filetype>

  <!-- run type -->
  <runtype>&run_type;</runtype>

</project>
