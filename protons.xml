<?xml version="1.0"?>

<!-- Production Project -->
<!-- for v1 first try with v06_06_01, just 5000, 10 jobs -->

<!DOCTYPE project [
<!ENTITY release "v06_06_01">
<!ENTITY file_type "mc">
<!ENTITY run_type "physics">
<!ENTITY name "lariat_PiAbsAndChEx_flat_p_v1">
<!ENTITY tag "TestOfBatchJobs">
]>

<project name="&name;">

  <!-- Project size -->
  <numevents>5000</numevents>
  <!-- Try to do 500 events/job  ~2.5hr for reco -->

  <!-- Operating System -->
  <os>SL6</os>

  <!-- Batch resources -->
  <resource>DEDICATED,OPPORTUNISTIC</resource>

  <!-- Larsoft information -->
  <larsoft>
      <tag>&release;</tag>
      <qual>e10:prof</qual>
      <local>/lariat/app/users/jhugon/genPionAbsAndChEx/lariatsoft_35fdffd5fd2e5.tar</local>
  </larsoft>

  <!-- Project stages -->

  <stage name="gensimdigi">
      <fcl>prodsingle_lariat_PiAbsAndChEx_p.fcl</fcl>
      <outdir>/pnfs/lariat/scratch/users/jhugon/&release;/gensimdigi/&name;</outdir>
      <workdir>/lariat/app/users/jhugon/lariatOffline/&release;/gensimdigi/&name;</workdir>
      <numjobs>10</numjobs>
      <datatier>simulated</datatier>
  </stage>

  <stage name="reco">
      <fcl>RecoMC.fcl</fcl>
      <outdir>/pnfs/lariat/scratch/users/jhugon/&release;/reco/&name;</outdir>
      <workdir>/lariat/app/users/jhugon/lariatOffline/&release;/reco/&name;</workdir>
      <numjobs>10</numjobs>
      <datatier>reconstructed-2d</datatier>
  </stage>

  <stage name="ana">
      <fcl>AnaTree.fcl</fcl>
      <outdir>/pnfs/lariat/scratch/users/jhugon/&release;/ana/&name;</outdir>
      <workdir>/lariat/app/users/jhugon/lariatOffline/&release;/ana/&name;</workdir>
      <numjobs>10</numjobs>
      <datatier>reconstructed-2d</datatier>
  </stage>

  <!-- file type -->
  <filetype>&file_type;</filetype>

  <!-- run type -->
  <runtype>&run_type;</runtype>

</project>
