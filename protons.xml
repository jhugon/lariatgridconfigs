      <tag>&release;</tag>
      <qual>e7:prof</qual>
      <local>/lariat/app/users/jhugon/genPionAbsAndChEx/lariatsoft_d99b09d6c83.tar</local>
  </larsoft>

  <!-- Project stages -->

  <stage name="gensimdigi">
